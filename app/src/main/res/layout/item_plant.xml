<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    app:strokeColor="#4CAF50"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="#1B5E20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con nombre y botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nombre_planta"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/editar"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/eliminar"
                app:tint="#F44336" />

        </LinearLayout>

        <!-- Especie -->
        <TextView
            android:id="@+id/txtSpecies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/especie"
            android:textColor="#B2DFDB"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- PrÃ³ximo riego -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_water_drop"
                android:contentDescription="@string/riego" />

            <TextView
                android:id="@+id/txtNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/proximo_riego"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnWater"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/regar_ahora"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />


        </LinearLayout>
        <!-- InformaciÃ³n adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- UbicaciÃ³n -->
            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Sala"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:layout_marginEnd="12dp"
                android:visibility="gone" />

            <!-- Nivel de luz -->
            <TextView
                android:id="@+id/txtLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜€ï¸ Media"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:layout_marginEnd="12dp"
                android:visibility="gone" />

            <!-- TamaÃ±o -->
            <TextView
                android:id="@+id/txtSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸª´ Mediana"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>