<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- AppBar con tÃ­tulo -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/agregar_planta"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- SECCIÃ“N: FOTO DE LA PLANTA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¸ Foto de tu planta"
                        android:textColor="@color/accent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <ImageView
                        android:id="@+id/imgPlantPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="@color/surface"
                        android:src="@drawable/ic_leaf"
                        android:contentDescription="@string/foto_planta"
                        app:tint="@color/text_hint"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Seleccionar foto"
                        app:icon="@android:drawable/ic_menu_camera"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÃ“N: INFORMACIÃ“N BÃSICA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ± InformaciÃ³n bÃ¡sica"
                        android:textColor="@color/accent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Nombre -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/surface"
                        app:boxStrokeColor="@color/accent"
                        app:startIconDrawable="@drawable/ic_leaf"
                        app:startIconTint="@color/accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nombre_planta"
                            android:inputType="textCapWords"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Especie -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/surface"
                        app:boxStrokeColor="@color/accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextSpecies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/especie"
                            android:inputType="textCapWords"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TamaÃ±o -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TamaÃ±o de la planta"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ± PequeÃ±a"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸª´ Mediana"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ³ Grande"
                            style="@style/Widget.Material3.Chip.Filter" />
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÃ“N: CUIDADOS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’§ Cuidados"
                        android:textColor="@color/accent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Frecuencia de riego -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/surface"
                        app:boxStrokeColor="@color/accent"
                        app:prefixText="Cada "
                        app:suffixText=" dÃ­as"
                        app:helperText="Â¿Cada cuÃ¡ntos dÃ­as necesita riego?"
                        app:helperTextTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextWateringDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="DÃ­as"
                            android:inputType="number"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Nivel de luz -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸ Nivel de luz necesaria"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLightLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ‘ Baja"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLightMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ¤ï¸ Media"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLightHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â˜€ï¸ Alta"
                            style="@style/Widget.Material3.Chip.Filter" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Humedad -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¦ Nivel de humedad"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupHumidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHumidityLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸœï¸ Baja"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHumidityMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ¿ Media"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHumidityHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ´ Alta"
                            style="@style/Widget.Material3.Chip.Filter" />
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÃ“N: UBICACIÃ“N -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ UbicaciÃ³n"
                        android:textColor="@color/accent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/surface"
                        app:boxStrokeColor="@color/accent"
                        app:helperText="Ejemplo: Sala, Cocina, BalcÃ³n"
                        app:helperTextTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Â¿DÃ³nde estÃ¡ ubicada?"
                            android:inputType="textCapWords"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÃ“N: NOTAS Y CONFIGURACIÃ“N -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Notas adicionales"
                        android:textColor="@color/accent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Notas -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/surface"
                        app:boxStrokeColor="@color/accent"
                        app:counterEnabled="true"
                        app:counterMaxLength="200">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextNotes"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="Observaciones, cuidados especiales..."
                            android:inputType="textMultiLine"
                            android:gravity="top|start"
                            android:maxLength="200"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Switch de notificaciones -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”” Recordatorios de riego"
                        android:textColor="@color/text_primary"
                        android:checked="true"
                        app:thumbTint="@color/accent"
                        app:trackTint="@color/surface" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BotÃ³n Guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ’¾ Guardar planta"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/success"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>