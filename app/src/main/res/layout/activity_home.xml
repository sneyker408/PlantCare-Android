<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_plants"
    android:padding="32dp"
    android:gravity="center">

    <!-- Logo Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_leaf"
            app:tint="@color/primary_light"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenido"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp" />

    <!-- Botón Agregar Planta (NUEVO) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAddPlant"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/agregar_planta"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="start"
        app:iconTint="@color/text_primary"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/success"
        android:layout_marginBottom="16dp" />

    <!-- Botón Mis Plantas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMyPlants"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/mis_plantas"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_leaf"
        app:iconGravity="start"
        app:iconTint="@color/text_primary"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/primary_light"
        android:layout_marginBottom="16dp" />

    <!-- Botón Comunidad -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFeed"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/feed"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_share"
        app:iconGravity="start"
        app:iconTint="@color/text_primary"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/info"
        android:layout_marginBottom="24dp" />

    <!-- Botón Cerrar Sesión -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/cerrar_sesion"
        android:textSize="14sp"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="@color/error" />

</LinearLayout>