<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== PERMISOS ========== -->
    <!-- Internet y red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Notificaciones (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- CÃ¡mara para fotos de plantas (futuro) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Almacenamiento para fotos (futuro) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Permisos para seleccionar fotos -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 13+ Media permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlantCare"
        tools:targetApi="31">

        <!-- Splash Activity -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PlantCare">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Home Activity -->
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Plant List Activity -->
        <activity
            android:name=".ui.PlantListActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Add/Edit Plant Activity -->
        <activity
            android:name=".ui.AddEditPlantActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Verify Code Activity -->
        <activity
            android:name=".ui.VerifyCodeActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Change Password Activity -->
        <activity
            android:name=".ui.ChangePasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Reset Password Activity -->
        <activity
            android:name=".ui.ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

        <!-- Feed Activity -->
        <activity
            android:name=".ui.FeedActivity"
            android:exported="false"
            android:theme="@style/Theme.PlantCare" />

    </application>

</manifest>